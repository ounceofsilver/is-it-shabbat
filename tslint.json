{
	"extends": [
		"tslint:recommended",
		"tslint-config-airbnb"
	],
	"rules": {
		"semicolon": [
			true,
			"always"
		],
		"indent": [
			true,
			"tabs",
			4
		],
		"ter-indent": [
			true,
			"tab"
		],
		"no-boolean-literal-compare": [false],
		"quotemark": [true, "single"],
		"whitespace": true,
		"no-any": false,
		"prefer-array-literal": [
			true,
			{
				"allow-type-parameters": true
			}
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-pascal-case",
			"allow-leading-underscore"
		]
	}
}
